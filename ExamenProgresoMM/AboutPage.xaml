<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenProgresoMM.AboutPage">
    <Grid Padding="20" RowDefinitions="*,*,*,*" ColumnDefinitions="*,*">
        <Label Text="Nombre:" Grid.Row="0" Grid.Column="0" />
        <Label Text="Matías Monteros" Grid.Row="0" Grid.Column="1" />

        <Label Text="Nacimiento:" Grid.Row="1" Grid.Column="0" />
        <Label Text="01/01/2000" Grid.Row="1" Grid.Column="1" />

        <Label Text="Intereses:" Grid.Row="2" Grid.Column="0" />
        <Label Text="Programación, IA" Grid.Row="2" Grid.Column="1" />

        <Label Text="Versión:" Grid.Row="3" Grid.Column="0" />
        <Label Text="{x:Static AppInfo.VersionString}" Grid.Row="3" Grid.Column="1" />
    </Grid>
</ContentPage>