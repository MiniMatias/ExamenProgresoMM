<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenProgresoMM.ChistesPage">
    <AbsoluteLayout>
        <Label x:Name="ChisteLabel" Text="Aquí aparecerá un chiste"
               FontSize="20" HorizontalOptions="Center" VerticalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5,0.4,0.9,0.5"
               AbsoluteLayout.LayoutFlags="All" />

        <Button Text="Otro chiste" FontSize="20" Clicked="OnOtroChisteClicked" WidthRequest="850" HorizontalOptions="Center" BackgroundColor="PaleVioletRed"
                AbsoluteLayout.LayoutBounds="0.5,1,1,50"
                AbsoluteLayout.LayoutFlags="WidthProportional,PositionProportional" />
    </AbsoluteLayout>
</ContentPage>